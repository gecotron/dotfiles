#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt

# program launcher
super + d
	rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Screenshot
super + shift + p
	scrot %Y-%m-%d_Screenshot.png -q 90

# audio
XF86AudioRaiseVolume
	amixer set Master 2%+

XF86AudioLowerVolume
	amixer set Master 2%-

XF86AudioMute
	amixer set Master toggle

#
# berry hotkeys
#

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {Left, Down, Up, Right}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {1-9}
    berryc send_to_workspace {0-9}

super + Up
    berryc window_monocle

super + f
    berryc fullscreen

super + Right
    berryc snap_right

super + Left
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + Down
	berryc window_resize_absolute 1000 650 && berryc window_center

~button1
    berryc pointer_focus

# quit berry
super + alt + q
	berryc quit

# restart berry
super + alt + r
	exec berry
